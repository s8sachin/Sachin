<h1>listing books</h1>
<table>
	<tr>
		<th>Book name</th>
		<th>Author</th>
		<th>Publication</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.book_name %></td>
		<td><%= book.author %></td>
		<td><%= book.publication %></td>

	
		<td><%= link_to "Edit", book_edit_path(book)%> </td>
		<td><%= link_to "Destroy", book_destroy_path(book), method: :delete, data: {
		confirm: "Are you sure?"
		}%> </td>

	</tr>
	<% end %>
</table>